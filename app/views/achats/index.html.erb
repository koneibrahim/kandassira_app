<h1>Achats</h1>
<div class="table-responsive">
<table class="table table-bordered table-striped">  
  <thead>
    <tr class="info">
      <th>Date ac</th>
      <th>Id fo</th>
      <th>Somme</th>
      <th>Payee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @achats.each do |achat| %>
      <tr>
        <td><%= achat.date_ac %></td>
        <td><%= achat.id_fo %></td>
        <td><%= achat.somme %></td>
        <td><%= achat.payee %></td>
        <td><%= link_to 'Show', achat %></td>
        <td><%= link_to 'Edit', edit_achat_path(achat) %></td>
        <td><%= link_to 'Destroy', achat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

