<p id="notice"><%= notice %></p>

<h1>Achats</h1>
    <div class="table-responsive">
      <table class="table table-bordered table-striped">
  <thead>
    <tr class="info">

      <th>NÂ°</th>
      <th>Date ac</th>
      <th>Id fo</th>
      <th>Somme</th>
      <th>Payee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%
    @i=1;
    @achats.each do |achat|
       %>
      <tr>
        <td><%= @i %></td>
        <td><%= achat.date_ac %></td>
        <td><%= achat.id_fo %></td>
        <td><%= achat.somme %></td>
        <td><%= achat.payee %></td>
        <td><%= link_to 'Show', achat %></td>
        <td><%= link_to 'Edit', edit_achat_path(achat) %></td>
        <td><%= link_to 'Destroy', achat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%
    @i+=1
  end
   %>
  </tbody>
</table>
</div>

