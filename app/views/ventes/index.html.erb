<p id="notice"><%= notice %></p>
<div class="row">
      <div class="col-xs-3 col-sm-3">
           </div>
            <div class="col-xs-9 col-sm-9">
              <h1>Ventes</h1>
                  <div class="table-responsive">
                  <table class="table table-bordered  table-striped">
                    <thead>
                      <tr class="info">
                        <th>N°</th>
                        <th>Date vente</th>
                        <th>Nom client</th>
                        <th>Montant du vente</th>
                        <th>Montant Payé</th>
                        <th colspan="3">Action</th>
                      </tr>
                    </thead>

                  <tbody>
                        <%
                        @i=1;
                        @ventes.each do |vente|
                       %>
                        <tr>
                            <td><%= @i %></td>
                            <td><%= vente.date_vente %></td>
                            <td><%= vente.client.id %></td>
                            <td><%= vente.somme %></td>
                            <td><%= vente.payee %></td>
                            <td><%= link_to 'Show', vente %></td>
                            <td><%= link_to 'Edit', edit_vente_path(vente) %></td>
                            <td><%= link_to 'Destroy', vente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                      <%
                      @i+=1
                     end
                    %>
                  </tbody>
                  <br>
                  <a href="/ventes/new" class="btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-plus"></span> Add</a></p>
          </table>
          </div>
        </div>
</div>
