<h1>Produits</h1>
<div class="table-responsive">
<table class="table table-bordered  table-striped">
  <thead>
    <tr class="info">
      <th>Nom pro</th>
      <th>Type pro</th>
      <th>Prix</th>
      <th>Qte pro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produits.each do |produit| %>
      <tr>
        <td><%= produit.nom_pro %></td>
        <td><%= produit.type_pro %></td>
        <td><%= produit.prix %></td>
        <td><%= produit.qte_pro %></td>
        <td><%= link_to 'Show', produit %></td>
        <td><%= link_to 'Edit', edit_produit_path(produit) %></td>
        <td><%= link_to 'Destroy', produit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

