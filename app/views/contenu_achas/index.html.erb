<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-xs-3 col-sm-3">
     </div>
      <div class="col-xs-9 col-sm-9">
        <h1>Contenu Achat</h1>
        <div class="table-responsive">
          <table class="table table-bordered table-striped">
          <thead>
            <tr class="info">
              <th>N°</th>
              <th>Nom produit</th>
              <th>Quantité produit</th>
              <th>Montant</th>
              <th colspan="3"></th>
            </tr>
          </thead>
              <tbody>
              <%
              @i=1;
              @contenu_achas.each do |contenu_acha|
              %>
                <tr>
                  <td><%= @i %></td>
                  <td><%= contenu_acha.nom_pro %></td>
                  <td><%= contenu_acha.qte_pro %></td>
                  <td><%= contenu_acha.montant %></td>
                  <td><%= link_to 'Show', contenu_acha %></td>
                  <td><%= link_to 'Edit', edit_contenu_acha_path(contenu_acha) %></td>
                  <td><%= link_to 'Destroy', contenu_acha, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
            <br>
            <p>New Contenu achat:
                    <a href="/contenu_achas/new" class="btn btn-default btn-sm">
                      <span class="glyphicon glyphicon-plus"></span> Add </a></p>
        </table>
      </div>
    </div>
